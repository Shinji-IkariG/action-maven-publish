{
	"name": "action-maven-publish",
	"version": "1.3.1",
	"description": "GitHub Action for automatically publishing Maven packages",
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/action-maven-publish",
	"private": true,
	"main": "./index.js",
	"scripts": {
		"lint": "eslint --fix --ignore-path ./.gitignore --max-warnings 0 '**/*.js'",
		"format": "prettier --ignore-path ./.gitignore --write '**/*.{css,html,js,json,jsx,less,md,scss,ts,tsx,vue,yaml,yml}'"
	},
	"dependencies": {},
	"peerDependencies": {},
	"devDependencies": {
		"@samuelmeuli/eslint-config": "^5.0.2",
		"@samuelmeuli/prettier-config": "^1.0.0",
		"eslint": "6.7.2",
		"eslint-config-airbnb-base": "14.0.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-simple-import-sort": "^5.0.0",
		"prettier": "^1.19.1"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@samuelmeuli/eslint-config"
		],
		"env": {
			"node": true
		}
	},
	"prettier": "@samuelmeuli/prettier-config"
}
